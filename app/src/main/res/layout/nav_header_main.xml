<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/back_logo"
        android:alpha="50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="7" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
             android:id="@+id/header_ce_layout"
            android:layout_height="@dimen/nav_header_height"
            android:background="#e096CDCD"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/back_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Code"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android.studio@android.com" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/header_ce_layout"
        android:id="@+id/information1_layout"
        android:background="#e0ffffff"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/p5318" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="姓名  "
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/information6_layout"
        android:id="@+id/information2_layout"
        android:background="#e0ffffff">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/p12480" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="学号  "
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/information2_layout"
        android:id="@+id/information3_layout"
        android:background="#e0ffffff">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/p34108" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="学院  "
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/information3_layout"
        android:id="@+id/information4_layout"
        android:background="#e0ffffff">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/p507329" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="班级  "
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/information1_layout"
        android:id="@+id/information6_layout"
        android:background="#e0ffffff">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/p1115685" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="年龄 "
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/information4_layout"
        android:id="@+id/information5_layout"
        android:background="#e0ffffff">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/p549100" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="座右铭  "
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <Button
        android:id="@+id/change_information"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="编辑资料"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"
        android:layout_below="@+id/information5_layout"
        android:textColor="#fff"
        android:gravity="center"
        android:background="@drawable/setcolor"
        />

    </RelativeLayout>



